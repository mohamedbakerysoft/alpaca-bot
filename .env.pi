# Alpaca Bot - Raspberry Pi Configuration
# Copy this file to .env on your Raspberry Pi and configure the values

# Trading Configuration
TRADING_MODE=aggressive
ENVIRONMENT=production

# Alpaca API Configuration
# Get these from your Alpaca account: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading

# Database Configuration (SQLite for Pi)
DATABASE_URL=sqlite:///data/alpaca_bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/alpaca_bot.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Pi-specific Performance Settings
# Reduced memory usage and CPU optimization for Raspberry Pi
MAX_WORKERS=2
BATCH_SIZE=50
CACHE_SIZE=100
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Market Data Configuration
MARKET_DATA_PROVIDER=alpaca
REAL_TIME_DATA=false  # Set to true if you have real-time data subscription

# Risk Management - Optimized Settings
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=100
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0

# Trading Parameters - Optimized for Better Performance
DEFAULT_POSITION_SIZE=50.0
SUPPORT_THRESHOLD=0.005
RESISTANCE_THRESHOLD=0.008
FIXED_TRADE_AMOUNT=50.0
CUSTOM_PORTFOLIO_VALUE=5000.0
ENABLE_FIXED_TRADE_AMOUNT=true
CUSTOM_PORTFOLIO_VALUE_ENABLED=true

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=your_email@example.com

# System Monitoring
MONITOR_SYSTEM_RESOURCES=true
MEMORY_THRESHOLD=80  # Percentage
CPU_THRESHOLD=80     # Percentage
DISK_THRESHOLD=90    # Percentage

# Backup Configuration
ENABLE_BACKUPS=true
BACKUP_INTERVAL=24   # Hours
BACKUP_RETENTION=7   # Days
BACKUP_PATH=backups/

# Development Settings (set to false for production)
DEBUG=false
TEST_MODE=false
VERBOSE_LOGGING=false

# Pi Hardware Optimization
# These settings help optimize performance on Raspberry Pi
USE_HARDWARE_ACCELERATION=true
OPTIMIZE_FOR_ARM=true
REDUCE_MEMORY_USAGE=true

# Network Configuration
CONNECTION_POOL_SIZE=5
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30

# Timezone (adjust for your location)
TIMEZONE=America/New_York

# Market Hours (Eastern Time)
MARKET_OPEN=09:30
MARKET_CLOSE=16:00

# Trading Schedule
TRADE_ON_WEEKENDS=false
TRADE_ON_HOLIDAYS=false

# Data Storage
DATA_RETENTION_DAYS=30
CLEANUP_OLD_DATA=true

# Security
ENABLE_API_RATE_LIMITING=true
API_RATE_LIMIT=100  # Requests per minute
ENABLE_REQUEST_LOGGING=true

# Health Check
HEALTH_CHECK_INTERVAL=300  # Seconds
HEALTH_CHECK_ENDPOINT=/health

# Raspberry Pi Specific
# GPIO pins for status LEDs (optional)
STATUS_LED_PIN=18
ERROR_LED_PIN=19
TRADING_LED_PIN=20

# Temperature monitoring
MONITOR_CPU_TEMP=true
MAX_CPU_TEMP=70  # Celsius

# Power management
LOW_POWER_MODE=false
SLEEP_WHEN_MARKET_CLOSED=true