# Alpaca Trading Bot Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Alpaca API Configuration
# Get these from your Alpaca account dashboard
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# API Base URL (use paper trading URL for testing)
# Paper trading: https://paper-api.alpaca.markets
# Live trading: https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Trading Mode
# Set to True for paper trading (recommended for testing)
# Set to False for live trading (use with caution)
PAPER_TRADING=True

# Strategy Parameters
# Default position size in USD
DEFAULT_POSITION_SIZE=1000.0

# Support level threshold (percentage below recent high)
SUPPORT_THRESHOLD=0.02

# Resistance level threshold (percentage below resistance)
RESISTANCE_THRESHOLD=0.015

# Stop loss percentage
STOP_LOSS_PERCENTAGE=0.01

# Application Configuration
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE_PATH=logs/alpaca_bot.log

# Data refresh interval in seconds
DATA_REFRESH_INTERVAL=5

# Fixed Trade Amount Feature
FIXED_TRADE_AMOUNT_ENABLED=false
FIXED_TRADE_AMOUNT=100.0

# Custom Portfolio Value Feature
CUSTOM_PORTFOLIO_VALUE_ENABLED=false
CUSTOM_PORTFOLIO_VALUE=10000.0

# GUI Configuration
# Main window dimensions
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800